@using AliFitnessAE.Web.Models.Common.Admin.Modals
@using AliFitnessAE.TopicContent.Dto
@model TopicDto
<div class="topic-block">
    @if (!string.IsNullOrEmpty(Model.Title))
    {
        <div class="topic-block-title">
            <h2>@Model.Title</h2>
        </div>
    }
    <div class="topic-block-body">
        @Html.Raw(Model.Body)
    </div>
</div>