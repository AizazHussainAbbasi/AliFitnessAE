@using AliFitnessAE.Web.Startup
@{
    ViewBag.Title = L("Topic");
    ViewBag.CurrentPageName = PageNames.Topic;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Admin/Views/Topic/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Admin/Views/Topic/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Topic")</h1>
            </div>
            <div class="col-sm-6">
                @if (IsGranted("Pages.Topic.CreateTopic"))
                {
                    <a href="javascript:;" data-toggle="modal" data-target="#TopicCreateModal" class="btn bg-blue float-sm-right">
                        <i class="fa fa-plus-square"></i>
                        @L("Create")
                    </a>
                }
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @*@await Html.PartialAsync("Index.AdvancedSearch.cshtml")*@
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="TopicTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("TopicConst")</th>
                                        <th>@L("Title")</th>
                                        <th>@L("Published")</th>
                                        <th>@L("IncluedInTopMenu")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_CreateModal.cshtml")

<div class="modal fade" id="TopicEditModal" tabindex="-1" Topic="dialog" aria-labelledby="TopicEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" Topic="document">
        <div class="modal-content">
        </div>
    </div>
</div>

 

