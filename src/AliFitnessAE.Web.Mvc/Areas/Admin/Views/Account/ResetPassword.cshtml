@model AliFitnessAE.Web.Models.Admin.Account.ResetPasswordRequest
@{
    ViewBag.Title = L("ResetPassword");
}
<form id="ForgotPasswordForm" asp-area="Admin" asp-controller="Account" asp-action="ResetPassword" method="post" autocomplete="off">
    <h4 class="text-center">@L("ForgotPassword")</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="input-group mb-3">
        <input type="password" asp-for="Password" class="form-control" placeholder="@L("NewPassword")" required>
    </div>
    <div class="input-group mb-3">
        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="@L("ConfirmNewPassword")" required>
    </div>
    <div class="row">
        <input type="hidden" asp-for="Email" class="form-control" />
        <input type="hidden" asp-for="Token" class="form-control" />
        <div class="col-6">
            <a asp-action="Login" class="btn btn-default btn-flat"><i class="fa fa-arrow-circle-left"></i> @L("Back")</a>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-primary btn-block btn-flat">@L("ResetPassword")</button>
        </div>
    </div>
</form>

